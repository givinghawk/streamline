{
  "name": "streamline",
  "version": "0.6.0-beta",
  "description": "A powerful FFmpeg frontend for media encoding and optimization",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "package": "electron-builder"
  },
  "keywords": [
    "ffmpeg",
    "video",
    "audio",
    "optimization",
    "electron"
  ],
  "author": "Streamline Development Team",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^35.7.5",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "vite": "^7.1.11",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "imagemagick": "^0.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.34.4",
    "systeminformation": "^5.27.11"
  },
  "build": {
    "appId": "com.streamline.app",
    "productName": "Streamline",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "src/electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "fileAssociations": [
      {
        "ext": "slqueue",
        "name": "Streamline Queue",
        "description": "Streamline Batch Queue File",
        "role": "Editor"
      },
      {
        "ext": "slpreset",
        "name": "Streamline Preset",
        "description": "Streamline Encoding Preset",
        "role": "Editor"
      },
      {
        "ext": "slanalysis",
        "name": "Streamline Analysis",
        "description": "Streamline Video Analysis Data",
        "role": "Viewer"
      },
      {
        "ext": "slreport",
        "name": "Streamline Report",
        "description": "Streamline Encoding Report",
        "role": "Viewer"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ]
    }
  }
}
